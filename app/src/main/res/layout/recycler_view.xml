<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="@string/contact_image"
        android:src="@drawable/baseline_person_24"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/titleMovie"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/movieImage"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:paddingStart="10dp"
        android:text="Title"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/certificationMovie"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_below="@id/movieImage"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/titleMovie"
        android:background="#000000"
        android:paddingStart="10dp"
        android:text="Certification"
        android:textColor="#4CAF50" />

    <TextView
        android:id="@+id/starr"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/titleMovie"
        android:background="#000000"
        android:paddingStart="10dp"
        android:text="Starring:"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/starringMovie"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/titleMovie"
        android:layout_toEndOf="@id/starr"
        android:background="#000000"
        android:paddingStart="10dp"
        android:text="Starring"
        android:textColor="#9F9F9F"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/movie_badge"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/movieImage"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/certificationMovie"
        android:background="@drawable/badge"
        android:padding="10dp"
        android:text="Filling Fast"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/starringMovie"
        android:background="#000000"
        android:paddingStart="10dp"
        android:text="Running Time:"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/runningTimeMovie"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/starringMovie"
        android:layout_toEndOf="@id/runtime"
        android:background="#000000"
        android:paddingStart="10dp"
        android:text="Time"
        android:textColor="#9F9F9F"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/seatsRemainingMovie"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/starringMovie"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/runningTimeMovie"
        android:background="#000000"
        android:baselineAligned="false"
        android:paddingEnd="10dp"
        android:text="0 Seats Remaining"
        android:textAlignment="textEnd"
        android:textColor="#ffffff" />

</RelativeLayout>